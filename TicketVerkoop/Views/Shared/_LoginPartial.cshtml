@using Microsoft.AspNetCore.Identity
@using Project_FullStack.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="ShoppingCart" asp-action="Index"><i class="bi bi-cart4"></i>&nbsp; winkelmandje</a>
    </li>
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.Name</a>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-controller="Bestellingen" asp-action="Index"><i class="bi bi-ticket-perforated"></i>&nbsp; mijn bestellingen</a>
            <a class="dropdown-item" asp-controller="Profiel" asp-action="Index"><i class="bi bi-person-badge"></i>&nbsp; Mijn Profiel</a>
            @*<a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="bi bi-person-badge"></i>&nbsp; Mijn Profiel</a>*@
        </div>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-white"><i class="bi bi-power"></i> &nbsp; Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-key"></i> &nbsp; Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-power"></i> &nbsp; Login</a>
    </li>
}
</ul>
